<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Movie Seat Booking</title>
    <link rel="stylesheet" href="../public/css/ticketBook.css">
  </head>
  <body>

    <ul class="showcase">
      <li>
        <div id="seat" class="seat"></div>
        <small class="status" style="font-size: 1em;">N/A</small>
      </li>
      <li>
        <div id="seat" class="seat selected"></div>
        <small class="status" style="font-size: 1em;">Selected</small>
      </li>
      <li>
        <div id="seat" class="seat occupied"></div>
        <small class="status" style="font-size: 1em;">Occupied</small>
      </li>
    </ul>

    <div class="container">
      <div class="screen">Screen</div>

      <div class="row">
          <% var i=1 %>
            <% booked.forEach(function (book) { %>
            <%if(book.isBooked === 0) { %>
                <div   class="seat"  id="seat" ></div>
            <% } else {%>
                <div id="seat" class="seat occupied"></div>
            <%}i++;})%>
      </div>
    </div>

    <p class="text" style="font-size: 1em;margin:0px 0px 15px 0px">
      You have selected <span id="count">0</span> seats for a price of $<span
        id="price"
        >0</span
      >
    </p>

    <form action="/successful" >
      <button class="btn-home">
        Book
      </button> <a href="home.html"><button class="btn-home">
        Home
      </button></a>
    </form>
    

    <script src="../public/js/booking.js">   </script>
  </body>
</html>
